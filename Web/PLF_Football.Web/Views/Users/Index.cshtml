@model PLF_Football.Web.ViewModels.ApplicationUsers.UserProfileViewModel
@{
    this.ViewData["ClubImg"] = @Model.FavoriteTeamName.ToLower();
}
<style>
    .bg-team::after {
        content: "";
        display: block;
        position: absolute;
        top: 0;
        left: 0;
        background-image: url('/image/Club/@(this.ViewData["ClubImg"]).png');
        width: 100%;
        height: 100%;
        background-position: center;
        background-size: 100%;
        opacity: 0.3;
        z-index: -1;
    }
</style>
<div class="bg-team">
    <br />
    <div class="d-flex justify-content-center">
        <h2>@Model.UserName - @Model.FavoriteTeamName Fantasy Teams</h2>
    </div>
    <br />
    <hr />
    <div>
        <div class="col-md-12">
            @foreach (var team in Model.Teams.OrderByDescending(x => x.Matchday))
            {
             <div class="row">
             
                 <span class="col-md-3">Matchday: @team.Matchday </span>
                 <span class="col-md-5">Team Price: @team.TeamSumAsString </span>
                 <span class="col-md-3">Points: @team.Points</span>
                 <a class="btn alert-secondary" asp-controller="Users" asp-action="Team" asp-route-userId="@Model.Id"
                         asp-route-matchday="@team.Matchday">
                     Details
                 </a>
             </div>
                <br />
                <div class="col-md-12 d-flex justify-content-between">
                    @foreach (var player in team.Team.OrderByDescending(x => x.Position.Id))
                    {
                        <a>
                            <img style="height:100px" src="@player.ImageUrl" alt="Alternate Text" />
                        </a>
                    }
                </div>
                <hr />
            }
        </div>
    </div>
</div>
