@model PLF_Football.Web.ViewModels.Supporters.CollectionOfSupporterViewModel

@using System.Security.Claims;

@{
    this.ViewData["CuurentUserId"] = this.User.FindFirst(ClaimTypes.NameIdentifier).Value;
    this.ViewData["firstSupporterOnPageNumber"] = (this.Model.PageNumber - 1) * this.Model.ItemsPerPage + 1;
    this.ViewData["lastSupporterOnPageNumber"] = (this.Model.PageNumber - 1) * this.Model.ItemsPerPage + this.Model.ItemsPerPage > this.Model.ItemsCount ? this.Model.ItemsCount : (this.Model.PageNumber - 1) * this.Model.ItemsPerPage + this.Model.ItemsPerPage;
}

<style>
    .container-supp {
        position: relative;
        padding-top: 10px;
    }

        .container-supp:after {
            content: "";
            display: block;
            position: absolute;
            top: 0;
            left: -13%;
            background-image: url('/image/Common/fans.png');
            width: 128.5%;
            height: 81vh;
            background-position: top;
            background-size: 100%;
            opacity: 0.3;
            z-index: -1;
        }

    table {
        background-color: rgba(255,255,255,0.6);
        border-radius: 10px;
    }

    .table-title {
        height: 30px;
        margin-bottom: 10px;
        background-color: rgba(128, 128, 128, 0.6);
        border-radius: 10px;
        text-align: center;
        color: white;
        font-weight: bold;
    }

        .table-title a {
            color: white;
        }

    td a {
        color: black;
    }

    td img {
        width: 20px;
    }

    td, th {
        text-align: center;
        font-weight: bold;
    }

    .table tbody tr td {
        padding: 9px;
    }

    .paging {
        margin-bottom: 10px;
    }
</style>

<div class="row col-md-12 container-supp">

    <div class="rank-total col-md-12">
        <div class="paging">
            <partial name="_PagingPartialSupportersByTotalPoints" model="@Model" />
        </div>

        <div class="table-title">
            Supporters full ranking (@this.ViewData["firstSupporterOnPageNumber"] - @this.ViewData["lastSupporterOnPageNumber"])
        </div>


        <table class="table table-striped table-borderless">
            <thead>
                <tr>
                    <th>
                        Club
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Total Points
                    </th>
                    <th>
                        Games
                    </th>
                    <th>
                        Pts per Game
                    </th>
                    <th>
                        Avg. Team Price
                    </th>
                    <th>
                        Avg. Point Price
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var supp in Model.Supporters.OrderByDescending(x => x.TotalPoints).ThenBy(x => x.AverageTeamSum).Skip((Model.PageNumber - 1) * Model.ItemsPerPage).Take(Model.ItemsPerPage))
                {


                    <tr @if (supp.Id == (string)this.ViewData["CuurentUserId"]) { <text> style="background-color:lightgreen" </text> }>
                        <td>
                            <img src="@supp.FavoriteTeamBadgeUrl" alt="Alternate Text" />
                        </td>
                        <td>
                            <a asp-controller="Users" asp-action="AllTeams" asp-route-userId="@supp.Id">@supp.UserName</a>
                        </td>
                        <td>
                            @supp.TotalPoints
                        </td>
                        <td>
                            @supp.Games.Count
                        </td>
                        <td>
                            @supp.PtsPerGame
                        </td>
                        <td>
                            @supp.AverageTeamSumAtString
                        </td>
                        <td>
                            @supp.PointSumAtString
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>
